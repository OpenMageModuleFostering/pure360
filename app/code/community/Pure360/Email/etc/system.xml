<?xml version="1.0"?>
<config>
	<sections>
		<pure360_email translate="label" module="pure360_email">
			<label>Email</label>
			<tab>pure360</tab>
			<frontend_type>text</frontend_type>
			<sort_order>400</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<about>
					<frontend_type>text</frontend_type>
					<frontend_model>pure360_email/adminhtml_system_config_about</frontend_model>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
				</about>
	
				<default_settings translate="label">
					<label>Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<expanded>1</expanded>
					<fields>
						<enabled translate="label">
							<label>Enable Module</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
						</enabled>
					</fields>
				</default_settings>

				<websites_settings translate="label">
					<label>Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_website>1</show_in_website>
					<expanded>1</expanded>
					<fields>
						<enabled translate="label">
							<label>Enable Module</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>0</sort_order>
							<show_in_website>1</show_in_website>
						</enabled>
					</fields>
				</websites_settings>

				<stores_settings translate="label">
					<label>Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<enabled translate="label">
							<label>Enable Module</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>0</sort_order>
							<show_in_store>1</show_in_store>
						</enabled>
					</fields>
				</stores_settings>
				
			<!-- -->
				<email_message_mapping>
					<label>Email Message Mapping</label>
					<frontend_type>text</frontend_type>
					<frontend_model>pure360_email/adminhtml_system_config_transactional</frontend_model>
					<sort_order>40</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
				</email_message_mapping>
			
			</groups>
		</pure360_email>
	</sections>
</config>
