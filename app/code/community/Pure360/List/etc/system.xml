<?xml version="1.0"?>
<config>
	<sections>
		<pure360_list module="pure360_list">
			<label>List</label>
			<tab>pure360</tab>
			<frontend_type>text</frontend_type>
			<sort_order>200</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<about>
					<frontend_type>text</frontend_type>
					<frontend_model>pure360_list/adminhtml_system_config_about</frontend_model>
